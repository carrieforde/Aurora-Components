# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{html,js,php,css,scss}]
charset = utf-8

# 4 space indentation
[*.{html,js,php,css,scss,handlebars}]
indent_style = tab
indent_size = 4

# 2 space indentation
[*.{json,yml}]
indent_style = space
indent_size = 2

# Matches the exact files
[{.bowerrc,.eslintrc,.travis.yml}]
indent_style = space
indent_size = 2
